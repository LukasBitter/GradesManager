<Window x:Class="gradesManager.NewModule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gradesManager"
        mc:Ignorable="d"
        Title="newModule" Height="235.106" Width="277.66">
    <Grid>
        <StackPanel Margin="35,31,47,74">
            <TextBlock ><Run Text="Name"/><LineBreak/><Run/></TextBlock>
            <TextBox x:Name="txt_moduleName" />
        </StackPanel>
        <Button x:Name="btn_ok" Content="OK" HorizontalAlignment="Left" Margin="166,135,0,0" VerticalAlignment="Top" Width="75" Click="btn_ok_Click"/>
        <Button x:Name="btn_cancel" Content="Cancel" HorizontalAlignment="Left" Margin="55,135,0,0" VerticalAlignment="Top" Width="75" Click="btn_cancel_Click"/>

    </Grid>
</Window>
